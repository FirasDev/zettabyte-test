<!DOCTYPE HTML>
<html>
	<head>
		<title>ZettaShare</title>
		<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/png" href="../../assets/images/icons/favicon.ico"/>
		<link rel="stylesheet" href="../../assets/css/style.css" />
	</head>
	<body>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
                        <span class="avatar"><img src="/avatar/<%= user.avatar %>" alt="not found" /></span>
                        <h2><%= user.name%> <%= user.lastName%></h2>
						<h1>Welcome to <strong>ZettaByte</strong>, an up and coming photo sharing revolutionary platform.</h1>
						<ul class="icons">
							<li><a href="#" class="icon style2 fa-twitter"><span class="label">Twitter</span></a></li>
							<li><a href="#" class="icon style2 fa-facebook"><span class="label">Facebook</span></a></li>
							<li><a href="#" class="icon style2 fa-instagram"><span class="label">Instagram</span></a></li>
                        </ul>
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <a href="/logout">
                                    <button  style="color: white;" class="login100-form-btn">
                                        Logout
                                    </button>
                                </a>
                            </div>
                        </div>
					</header>

				<!-- Main -->
					<section id="main">
                        <div class="container">
                            <div class="col-md-6">
                                <form method="POST" action="/picture/add" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>ZettaShare a new picture !</label>
                                    <div class="input-group">
                                        <span class="input-group-btn">
                                            <span class="btn btn-default btn-file">
                                                Browseâ€¦ <input type="file" name="file" id="imgInp">
                                            </span>
                                        </span>
                                        <input id="imgName" type="text" class="form-control" style="width: 20%;" readonly>
                                    </div>
                                    <br>
                                    <input id="caption" name="caption" type="text" class="form-control" style="width: 50%;" placeholder="Write your caption" required>
                                    <br>
                                    <img id='img-upload'/>
                                    <div class="container-login100-form-btn">
                                        <div class="wrap-login100-form-btn">
                                            <div class="login100-form-bgbtn"></div>
                                            <button type="submit" style="color: white;" class="login100-form-btn">
                                                ZETTASHARE
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            </div>
                            </div>
                        <!-- Thumbnails -->
                        <div style="display: table; margin: 0 auto;" class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <a href="/gallery">
                                    <button type="submit" style="color: white;" class="login100-form-btn">
                                        My Gallery
                                    </button>
                                </a>
                                <a href="/home">
                                    <button type="submit" style="color: white;" class="login100-form-btn">
                                        Zetta Gallery
                                    </button>
                                </a>
                            </div>
                        </div>
							<section class="thumbnails">
                                <% if(pictures != null ){ %>
                                <% for( let i = 1; i <= Math.ceil(pictures.length / 2); i++ ) { %>
                                
								<div>
									<a href="/pics/<%= pictures[i*2-2].image %>">
										<img src="/pics/<%= pictures[i*2-2].image %>" alt="" />
										<h3><%= pictures[i*2-2].caption %></h3>
                                    </a>
                                    <% if(i*2 <= pictures.length ){ %>
                                      
									<a href="/pics/<%= pictures[i*2-1].image %>">
										<img src="/pics/<%= pictures[i*2-1].image %>" alt="" />
										<h3><%= pictures[i*2-1].caption %></h3>
                                    </a>
                                    <% } %>
                                </div>
                                <% } %>
                                <% } %>
							</section>

					</section>

			</div>

        <!-- Scripts -->
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
			<script src="../../assets/assets/js/jquery.min.js"></script>
			<script src="../../assets/assets/js/jquery.poptrox.min.js"></script>
			<script src="../../assets/assets/js/skel.min.js"></script>
            <script src="../../assets/assets/js/main.js"></script>
            <script src="../../assets/js/upload.js"></script>

	</body>
</html>